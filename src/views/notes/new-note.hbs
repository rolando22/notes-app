<section class="card-edit-section">
    <div class="card__container">
        <h3 class="card__title">New Note</h3>
        <div class="card__body">
            <form class="card__form" action="/notes/new-note" method="POST">
                <input class="card__form-text" type="text" name="title" placeholder="Title">
                <textarea class="card__form-textarea" name="description" placeholder="Description"></textarea>
                <button class="card__form-button">Save</button>
            </form>
        </div>
    </div>
</section>
