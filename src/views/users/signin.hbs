<section class="user">
    <div class="user__form-container--signin">
        <h3 class="user__title">Account Login</h3>
        <form class="user__form" action="/users/signin" method="POST">
            <input class="form__item" type="email" name="email" placeholder="Email">
            <input class="form__item" type="password" name="password" placeholder="Password">
            <button class="form__button">Signup</button>
        </form>
    </div>
</section>
